{
  "name": "project-budget-manager",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main:watch": "tsc -p tsconfig.electron.json -w",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main:watch\" \"npm run dev:electron\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.electron.json",
    "build:wasm": "powershell New-Item -ItemType Directory -Force -Path dist-electron/node_modules/sql.js/dist; Copy-Item -Force node_modules/sql.js/dist/sql-wasm.wasm dist-electron/node_modules/sql.js/dist/",
    "build": "npm run build:renderer && npm run build:main && npm run build:wasm",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.8.0"
  },
  "build": {
    "appId": "com.tuorg.projectbudget",
    "files": [
      "dist-renderer/**",
      "dist-electron/**",
      "data/**"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
